{
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "bracketSpacing": true,
    "singleQuote": false,
    "trailingComma": "all",
    "importOrder": [
        "react",
        "react-native",
        "^react-native-(.*)$",
        "expo",
        "^expo-(.*)$",
        "^@ui/(.*)$",
        "^@styles/(.*)$",
        "^@components/(.*)$",
        "^@pages/(.*)$",
        "^@modals/(.*)$",
        "^@widgets/(.*)$",
        "^@stores/(.*)$",
        "^@backend/(.*)$",
        "^@app/(.*)$",
        "<THIRD_PARTY_MODULES>"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
